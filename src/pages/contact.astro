---
import Header from '../components/Header.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto - Bordados Artesanales</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    <Header />
    <Navigation />
    <main>
        <div class="max-w-2xl mx-auto my-8 p-8 bg-white rounded-xl shadow-md">
            <h2 class="text-text-primary text-4xl mb-8 text-center">Contáctanos</h2>
            <div class="space-y-10">
                <div class="flex flex-col items-center text-center">
                    <i class="fas fa-map-marker-alt text-4xl text-text-primary mb-4"></i>
                    <div>
                        <h3 class="text-text-primary text-2xl mb-3">Ubicación</h3>
                        <p class="text-text-primary text-lg">Av. Reforma 123<br>Col. Centro<br>Ciudad de México, CDMX</p>
                    </div>
                </div>
                <div class="flex flex-col items-center text-center">
                    <i class="fas fa-phone text-4xl text-text-primary mb-4"></i>
                    <div>
                        <h3 class="text-text-primary text-2xl mb-3">Teléfono</h3>
                        <p class="text-text-primary text-lg">+52 (55) 1234-5678</p>
                    </div>
                </div>
                <div class="flex flex-col items-center text-center">
                    <i class="fas fa-envelope text-4xl text-text-primary mb-4"></i>
                    <div>
                        <h3 class="text-text-primary text-2xl mb-3">Email</h3>
                        <p class="text-text-primary text-lg">info@bordadosartesanales.com</p>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <Footer />
</body>
</html> 