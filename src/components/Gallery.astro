---
import '../styles/global.css';
import Favorites from './Favorites.astro';
import { images, type Image } from '../data/gallery';
---

<Favorites />

<div class="max-w-7xl mx-auto px-4 py-8 flex flex-col gap-12" id="gallery" data-testid="gallery">
    {images.map((image: Image, index: number) => (
        <div class={`flex flex-col md:flex-row items-center gap-4 md:gap-8 bg-secondary rounded-xl overflow-hidden shadow-md transition-transform hover:-translate-y-1 min-h-[250px] max-w-3xl mx-auto ${index % 2 === 0 ? 'md:flex-row' : 'md:flex-row-reverse'}`} data-testid="gallery-item">
            <div class="flex-1 h-[250px] w-full overflow-hidden flex items-center justify-center p-2 bg-gray-50 relative rounded-lg m-2">
                <img src={image.src} alt={image.alt} class="w-full h-full object-contain max-w-full max-h-full block mx-auto rounded-lg" />
                <button class="favorite-button bg-transparent border-none cursor-pointer p-1 text-text-primary transition-transform hover:scale-110 absolute top-2 right-2" data-image={JSON.stringify(image)} aria-label="Agregar a favoritos">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                    </svg>
                </button>
            </div>
            <div class="flex-1 p-4 md:p-6 flex flex-col justify-center gap-2 min-w-[250px] w-full">
                <div class="flex justify-between items-center mb-2">
                    <h3 class="text-text-primary text-xl font-semibold mb-1">{image.title}</h3>
                </div>
                <p class="text-text-primary/80 leading-relaxed text-sm">{image.description}</p>
            </div>
        </div>
    ))}
</div>

<script src="../scripts/gallery.js"></script> 