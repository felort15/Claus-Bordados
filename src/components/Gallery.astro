---
const images = [
    { 
        src: "/images/Baby yoda.jpg", 
        alt: "Baby Yoda Bordado", 
        title: "Baby Yoda",
        description: "Un adorable bordado del personaje Baby Yoda, capturando su dulce mirada y expresiones características."
    },
    { 
        src: "/images/Dragon.jpg", 
        alt: "Dragón Bordado", 
        title: "Dragón",
        description: "Un majestuoso dragón bordado con detalles intricados y colores vibrantes que cobran vida en el tejido."
    },
    { 
        src: "/images/Doctora.jpg", 
        alt: "Doctora Bordada", 
        title: "Doctora",
        description: "Representación artística de una doctora, simbolizando la dedicación y el cuidado en el campo médico."
    },
    { 
        src: "/images/El pricipito.jpg", 
        alt: "El Principito Bordado", 
        title: "El Principito",
        description: "El clásico personaje de El Principito, bordado con delicadeza y los elementos característicos de la historia."
    },
    { 
        src: "/images/Gatos.jpg", 
        alt: "Gatos Bordados", 
        title: "Gatos",
        description: "Una encantadora representación de gatos, capturando su gracia y personalidad en cada puntada."
    },
    { 
        src: "/images/Gorros de Navidad.jpg", 
        alt: "Gorros de Navidad Bordados", 
        title: "Gorros de Navidad",
        description: "Festivos gorros de Navidad bordados con motivos navideños y colores tradicionales de la temporada."
    },
    { 
        src: "/images/Hawaii.jpg", 
        alt: "Hawaii Bordado", 
        title: "Hawaii",
        description: "Un diseño tropical que evoca la belleza y el espíritu relajado de las islas hawaianas."
    },
    { 
        src: "/images/Las Chivas.jpg", 
        alt: "Las Chivas Bordadas", 
        title: "Las Chivas",
        description: "Homenaje al equipo de fútbol Chivas, con sus colores característicos y elementos distintivos."
    },
    { 
        src: "/images/Unicornio.jpg", 
        alt: "Unicornio Bordado", 
        title: "Unicornio",
        description: "Un mágico unicornio bordado con detalles brillantes y colores fantásticos que lo hacen especial."
    },
    { 
        src: "/images/Virgin.jpg", 
        alt: "Virgen Bordada", 
        title: "Virgen",
        description: "Una representación devota de la Virgen, bordada con respeto y detalles religiosos significativos."
    }
];
---

<div class="gallery" id="gallery">
    {images.map((image, index) => (
        <div class={`gallery-item ${index % 2 === 0 ? 'left' : 'right'}`}>
            <div class="image-container">
                <img src={image.src} alt={image.alt} />
            </div>
            <div class="content-container">
                <h3>{image.title}</h3>
                <p>{image.description}</p>
            </div>
        </div>
    ))}
</div>

<style>
    .gallery {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
        display: flex;
        flex-direction: column;
        gap: 3rem;
    }

    .gallery-item {
        display: flex;
        align-items: center;
        gap: 2rem;
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
        min-height: 250px;
        max-width: 800px;
        margin: 0 auto;
    }

    .gallery-item:hover {
        transform: translateY(-5px);
    }

    .gallery-item.left {
        flex-direction: row;
    }

    .gallery-item.right {
        flex-direction: row-reverse;
    }

    .image-container {
        flex: 1;
        height: 250px;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem;
        background-color: #f8f8f8;
        position: relative;
        border-radius: 10px;
        margin: 0.5rem;
    }

    .image-container img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        max-width: 100%;
        max-height: 100%;
        display: block;
        margin: 0 auto;
        border-radius: 10px;
    }

    .content-container {
        flex: 1;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 0.5rem;
        min-width: 250px;
    }

    .content-container h3 {
        color: #333;
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .content-container p {
        color: #666;
        line-height: 1.4;
        font-size: 0.9rem;
    }

    @media (max-width: 768px) {
        .gallery-item {
            flex-direction: column !important;
            min-height: auto;
            max-width: 100%;
            gap: 1rem;
        }

        .image-container {
            height: 150px;
            padding: 0.25rem;
            width: 80%;
            margin: 0.5rem auto;
        }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            max-width: 100%;
        }

        .content-container {
            padding: 1rem;
            min-width: auto;
            text-align: center;
        }

        .content-container h3 {
            font-size: 1.2rem;
        }

        .content-container p {
            font-size: 0.8rem;
        }
    }
</style> 